@{
    ViewData["Title"] = "UrunEkleme";
}
@model ProductDto




<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form class="needs-validation" id="ProductsSaveColorHtmlForm" method="post">
                <h4 class="card-title">Ürün Renk Kayıt</h4>


                <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label" for="ProductsColorNameSave">Renk Adı</label>
                    <div class="col-md-6">
                        <input asp-for="Name" type="text" class="form-control" id="ProductsColorNameSave" placeholder="Ürünün Renk Adını Yazınız" required>
                        <div class="invalid-feedback">Ürün Renk Adı Boş olamaz!</div>
                    </div>
                </div>


                <button class="btn btn-primary" type="submit" onclick="ProductsJsKaydet()">Kaydet</button>
                <input type="submit" value="Save" class="btn btn-primary waves-effect waves-light me-1 form-group" />




            </form>


        </div>
    </div>
</div>



<script type="text/javascript">
    function ProductsJsKaydet() {
        var data = $("#ProductsSaveColorHtmlForm").serialize();
        console.log(data);
        alert(data);
        $.ajax({
            type: 'POST',
            url: '/Products/UrunEkleme',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8'
                    data: data,
            success: function (result) {
                alert('Kayıt oluştu ');
                console.log(result);
            },
            error: function () {
                alert('kayıt Başarısız');
                console.log('Failed ');
            }
        })
    }

</script>


