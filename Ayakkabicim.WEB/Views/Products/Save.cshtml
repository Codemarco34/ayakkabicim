@{
    ViewData["Title"] = "Save";
}
@model ProductDto



<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form class="needs-validation" id="ProductsSaveHtmlForm" method="post">
                <h4 class="card-title">Ürün Kayıt</h4>


                <div class="mb-3 row">
                    <label asp-for="CategoryId" class="col-md-2 col-form-label">Kategori</label>
                    <div class="col-md-6">
                        <select id="ProductsCategoryIdSave" asp-for="CategoryId" asp-items="ViewBag.categories" class="form-select" placeholder="Kategori Seçiniz"></select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label class="col-md-2 col-form-label" asp-for="ProductProjectId">Proje Adı</label>
                    <div class="col-md-6">
                    <select class="form-control select2" asp-for="ProductProjectId" asp-items="ViewBag.projects" id="ProductProjectIdSave"></select>
                    <span asp-validation-for="ProductProjectId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ProductColorId" class="col-md-2 col-form-label">Kayıtlı Renkler</label>
                    <div class="col-md-6">
                        <select id="ProductsColorIdSave" asp-for="ProductColorId" asp-items="ViewBag.colors" class="form-control select2" placeholder="Renk Seçiniz"></select>
                        <span asp-validation-for="ProductColorId" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ProductBrandsId" class="col-md-2 col-form-label">Kayıtlı Markalar</label>
                        <div class="col-md-6">
                    <select class="form-control select2" asp-for="ProductBrandsId" asp-items="ViewBag.brands" id="ProductBrandsIdSave22"></select>
                    <span asp-validation-for="ProductBrandsId" class="text-danger"></span>
                        </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="CurrencyId" class="col-md-2 col-form-label">Para Birim</label>
                            <div class="col-md-6">
                    <select class="form-control select2" asp-for="CurrencyId" asp-items="ViewBag.currency" id="ProductCurrencyUnitsIdSave"></select>
                    <span asp-validation-for="CurrencyId" class="text-danger"></span>
                </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="MeasurementId" class="col-md-2 col-form-label">Ölçüm Birim</label>
                                <div class="col-md-6">
                    <select class="form-control select2" asp-for="MeasurementId" asp-items="ViewBag.measurement" id="ProductMeasurementUnitsIdSave"></select>
                    <span asp-validation-for="MeasurementId" class="text-danger"></span>
                </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="WeightId" class="col-md-2 col-form-label">Ağırlık Birim</label>
                                    <div class="col-md-6">
                    <select class="form-control select2" asp-for="WeightId" asp-items="ViewBag.weight" id="ProductWeightIdSave"></select>
                    <span asp-validation-for="WeightId" class="text-danger"></span>
                </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="ProductVatId" class="col-md-2 col-form-label">KDV Oranı</label>
                    <div class="col-md-6">
                    <select class="form-control select2" asp-for="ProductVatId" asp-items="ViewBag.vat" id="ProductVatIdSave"></select>
                    <span asp-validation-for="ProductVatId" class="text-danger"></span>
                </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label" for="ProductsNameSave">Adı</label>
                    <div class="col-md-6">
                        <input asp-for="Name" type="text" class="form-control" id="ProductsNameSave" placeholder="Ürün Adını Yazınız" required>
                        <div class="invalid-feedback">Ürün Adı Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Code" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                        <input asp-for="Code" id="ProductsCodeSave" class="form-control" type="text" placeholder="Ürün Kodunu Yazınız" required>
                        <div class="invalid-feedback">Ürün Kodu Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Barcode" class="col-md-2 col-form-label">Barkod</label>
                    <div class="col-md-6">
                        <input asp-for="Barcode" id="ProductsBarcodeSave" class="form-control" type="text" placeholder="Ürün Barkodunu Yazınız" required>
                        <div class="invalid-feedback">Ürün Barkod Boş olamaz!</div>
                    </div>
                </div>


                <div class="mb-3 row">
                    <label asp-for="PurchasePrice" class="col-md-2 col-form-label">Alış Tutarı</label>
                    <div class="col-md-6">
                        <input asp-for="PurchasePrice" id="ProductsPurchasePriceSave" class="form-control" type="text" placeholder="Alış Tutarını Yazınız" required>
                        <div class="invalid-feedback">Ürün Alış Tutarı Boş olamaz!</div>
                    </div>
                </div>


                <div class="mb-3 row">
                    <label asp-for="SalePrice" class="col-md-2 col-form-label">Satış Tutarı</label>
                    <div class="col-md-6">
                        <input asp-for="SalePrice" id="ProductsSalePriceSave" class="form-control" type="text" placeholder="Satış Tutarını Yazınız" required>
                        <div class="invalid-feedback">Ürün Satış Tutarı Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Stock" class="col-md-2 col-form-label">Stok</label>
                    <div class="col-md-6">
                        <input asp-for="Stock" id="ProductsStockSave" class="form-control" type="text" placeholder="Stok Griniz" required>
                        <div class="invalid-feedback">Ürün Stok Miktarı Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="TechnicalWebUrl" class="col-md-2 col-form-label">Teknik Link</label>
                    <div class="col-md-6">
                        <input asp-for="TechnicalWebUrl" id="ProductsTechnicalWebUrlSave" class="form-control" type="text" placeholder="Teknik Döküman Linki Giriniz" required>
                        <div class="invalid-feedback">Ürünün Teknik Link Yolu Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ExplanationWebUrl" class="col-md-2 col-form-label">Açıklama Link</label>
                    <div class="col-md-6">
                        <input asp-for="ExplanationWebUrl" id="ProductsExplanationWebUrlSave" class="form-control" type="text" placeholder="Açıklama Döküman Linki Giriniz" required>
                        <div class="invalid-feedback">Ürünün Açıklama Link Yolu Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-6">
                        <textarea id="elm1" asp-for="Explanation" class="form-control"></textarea>

                    </div>
                </div>

                <button class="btn btn-primary" type="submit" onclick="ProductsJsKaydet()">Kaydet</button>
               




            </form>


        </div>
    </div>
</div>



<script type="text/javascript">
    function ProductsJsKaydet() {
        var data = $("#ProductsSaveHtmlForm").serialize();
        console.log(data);
        alert(data);
        $.ajax({
            type: 'POST',
            url: '/Products/Save',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8'
                data: data,
            success: function (result) {
                alert('Kayıt oluştu ');
                console.log(result);
            },
            error: function () {
                alert('kayıt Başarısız');
                console.log('Failed ');
            }
        })
    }

</script>


