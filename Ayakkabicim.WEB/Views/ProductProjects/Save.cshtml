@{
    ViewData["Title"] = "Save";
}
@model ProductProjectDto




<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="ProductProjects" asp-action="Save" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Proje Kayıt</h4>
                    <div class="col-lg-6">
                        <div class="mb-3">
                        <label class="form-label" asp-for="ProductProjectId" >Kayıtlı Projeler</label>
                        <select class="form-control select2" asp-for="ProductProjectId" asp-items="ViewBag.projects" id="ProductProjectsIdSave"></select>
                        <span asp-validation-for="ProductProjectId" class="text-danger"></span>
                        </div>

                <div class="mb-3 row">
                        <label asp-for="Name" class="col-md-2 col-form-label" for="ProductProjectsNameSave">Proje Adı</label>
                    <div class="col-md-6">
                        <input asp-for="Name" type="text" class="form-control" id="ProductProjectsName" placeholder="Proje Adını Yazınız" required>
                            <div class="invalid-feedback">Proje Adı Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ShortCode" class="col-md-2 col-form-label">Proje Kodu</label>
                    <div class="col-md-6">
                            <input asp-for="ShortCode" id="ProductProjectsCode" class="form-control" type="text" placeholder="Projec Kodunu Yazınız" required>
                            <div class="invalid-feedback">Proje Kodu Boş olamaz!</div>
                    </div>
                </div>
                

                <div class="mb-3 row">
                    <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-6">
                        <textarea id="elm1" asp-for="Explanation" class="form-control"></textarea>

                    </div>
                </div>
          
                <input type="submit"  class="btn btn-primary waves-effect waves-light me-1 form-group" />



                </div>
            </form>


        </div>
    </div>
</div>
              




