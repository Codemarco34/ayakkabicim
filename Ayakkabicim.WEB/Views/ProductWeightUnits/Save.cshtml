@{
    ViewData["Title"] = "Save";
}
@model ProductWeightUnitsDto




<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="ProductWeightUnits" asp-action="Save" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Ağırlık Birim Kayıt</h4>
                    <div class="col-lg-6">


                        <div class="mb-3">
                        <label class="form-label" asp-for="WeightId" >Kayıtlı Ağırlık Birimleri</label>
                        <select class="form-control select2" asp-for="WeightId" asp-items="ViewBag.weight" id="ProductWeightIdSave"></select>
                        <span asp-validation-for="WeightId" class="text-danger"></span>
                        </div>
                        

                <div class="mb-3 row">
                        <label asp-for="Name" class="col-md-2 col-form-label" for="WeightUnitsNameSave">Ağırlık Birimi</label>
                    <div class="col-md-6">
                        <input asp-for="Name" type="text" class="form-control" id="ProductWeightUnitsNameSave" placeholder="Ağırlık Birimini Yazınız" required>
                            <div class="invalid-feedback">Ağırlık Birimi Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ShortCode" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                            <input asp-for="ShortCode" id="ProductWeightsCodeSave" class="form-control" type="text" placeholder="Ağırlık Birim Kodunu Yazınız" required>
                            <div class="invalid-feedback">Ağırlık Birim Kodu Boş olamaz!</div>
                    </div>
                </div>

                    <div class="mb-3 row">
                        <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                        <div class="col-md-6">
                            <textarea id="elm1" asp-for="Explanation" class="form-control"></textarea>

                        </div>
                    </div>
            
                
               
        
          
                <input type="submit"  class="btn btn-primary waves-effect waves-light me-1 form-group" />


                </div>

            </form>


        </div>
    </div>
</div>
              




