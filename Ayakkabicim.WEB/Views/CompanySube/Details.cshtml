@{
    ViewData["Title"] = "Details";
}
@model CompanySubeDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
           
                <h4 class="card-title">Sube Details</h4>
            <input type="hidden" asp-for="Id" id="CompanySubeNameDetails">

            <div class="mb-3 row">
                    <label class="col-md-2 col-form-labe" asp-for="FirmaId">Kayıtlı Firmalar</label>
                    <div class="col-md-6">
                        <select class="form-control select2" asp-for="FirmaId" asp-items="ViewBag.firma" id="CompanyFirmaIdDetails" disabled></select>
                        <span asp-validation-for="FirmaId" class="text-danger"></span>
                    </div>
                </div>

            <div class="mb-3 row">
                <label asp-for="Name" class="col-md-2 col-form-label">Sube Name </label>
                <div class="col-md-6">
                    <input id="CompanySubeNameDetails" asp-for="Name" type="text" class="form-control" placeholder="Sube Giriniz" disabled>
                    <div class="invalid-feedback">Sube Adı Boş olamaz!</div>
                </div>
            </div>
            <div class="mb-3 row">
                        <label asp-for="Adress" class="col-md-2 col-form-label">Sube Adresi</label>
                        <div class="col-md-6">
                            <input id="CompanySubeAdressDetails" asp-for="Adress" type="text" class="form-control" placeholder="Sube Adresi Giriniz" disabled>
                            <div class="invalid-feedback">Sube Adresi Boş olamaz!</div>
                        </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="PhoneNumber" class="col-md-2 col-form-label">Telefon Numarası</label>
                <div class="col-md-6">
                    <input id="CompanySubePhoneNumberDetails" asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefon NUmarası Giriniz" disabled>
                    <div class="invalid-feedback">Telefon Numarası Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="FaxNumber" class="col-md-2 col-form-label">Fax Numarası</label>
                <div class="col-md-6">
                    <input id="CompanySubeFaxNumberDetails" asp-for="FaxNumber" type="text" class="form-control" placeholder="Fax Numarası Giriniz" disabled>
                    <div class="invalid-feedback">Fax Numarası Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="WebUrl" class="col-md-2 col-form-label">Web Url</label>
                <div class="col-md-6">
                    <input id="CompanySubeWebUrlDetails" asp-for="WebUrl" type="text" class="form-control" placeholder="Web Adresi Giriniz" disabled>

                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="TaxAdministration" class="col-md-2 col-form-label">Vergi Dairesi</label>
                <div class="col-md-6">
                    <input id="CompanySubeTaxAdministrationDetails" asp-for="TaxAdministration" type="text" class="form-control" placeholder="Vergi Dairesi Giriniz" disabled>
                    <div class="invalid-feedback">Vergi Dairesi Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="TaxNumber" class="col-md-2 col-form-label">Vergi Numarası</label>
                <div class="col-md-6">
                    <input id="CompanySubeTaxNumberDetails" asp-for="TaxNumber" type="text" class="form-control" placeholder="Vergi Numarası Giriniz" disabled>
                    <div class="invalid-feedback">Vergi Numarası Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="EPosta" class="col-md-2 col-form-label">E-Posta</label>
                <div class="col-md-6">
                    <input id="CompanySubeEPostaDetails" asp-for="EPosta" type="text" class="form-control" placeholder="E-Posta Giriniz" disabled>
                    <div class="invalid-feedback">E-Posta Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="InvoiceAdress" class="col-md-2 col-form-label">Fatura Adresi</label>
                <div class="col-md-6">
                    <input id="CompanyInvoiceAdressDetails" asp-for="InvoiceAdress" type="text" class="form-control" placeholder="Fatura Adresi Giriniz" disabled>
                    <div class="invalid-feedback">Fatura Adresi Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="EInvoice" class="col-md-2 col-form-label">E-Fatura</label>
                <div class="col-md-6">
                    <input id="CompanyEInvoiceDetails" asp-for="EInvoice" type="text" class="form-control" placeholder="E-Fatura Giriniz" disabled>
                    <div class="invalid-feedback">E-Fatura Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="CompanyType" class="col-md-2 col-form-label">Sube Tipi</label>
                <div class="col-md-6">
                    <input id="CompanyCompanyTypeDetails" asp-for="CompanyType" type="text" class="form-control" placeholder="Sube Tipi Giriniz" disabled>
                    <div class="invalid-feedback">Sube Tipi Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Explanation" class="col-md-2 col-form-label" >Açıklama</label>
                <div class="col-md-6">
                    <textarea id="elm1" asp-for="Explanation" class="form-control" disabled></textarea>

                </div>
            </div>





        </div>
    </div>
</div>

