@{
    ViewData["Title"] = "Details";
}
@model CompanyFirmaDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
           
                <h4 class="card-title">Firma Details</h4>
            <input type="hidden" asp-for="Id" id="CompanyFirmaNameDetails">

            <div class="mb-3 row">
                <label asp-for="Name" class="col-md-2 col-form-label">Firma Name </label>
                <div class="col-md-6">
                    <input id="CompanyFirmaNameDetails" asp-for="Name" type="text" class="form-control" placeholder="Firma Giriniz" disabled>
                    <div class="invalid-feedback">Firma Adı Boş olamaz!</div>
                </div>
            </div>
            <div class="mb-3 row">
                        <label asp-for="Adress" class="col-md-2 col-form-label">Firma Adresi</label>
                        <div class="col-md-6">
                            <input id="CompanyFirmaAdressDetails" asp-for="Adress" type="text" class="form-control" placeholder="Firma Adresi Giriniz" disabled>
                            <div class="invalid-feedback">Firma Adresi Boş olamaz!</div>
                        </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="PhoneNumber" class="col-md-2 col-form-label">Telefon Numarası</label>
                        <div class="col-md-6">
                        <input id="CompanyFirmaPhoneNumberDetails" asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefon Numarası Giriniz" disabled>
                            <div class="invalid-feedback">Telefon Numarası Boş olamaz!</div>
                        </div>
                    </div>

            <div class="mb-3 row">
                <label asp-for="FaxNumber" class="col-md-2 col-form-label">Fax Numarası</label>
                <div class="col-md-6">
                    <input id="CompanyFirmaFaxNumberDetails" asp-for="FaxNumber" type="text" class="form-control" placeholder="Fax Numarası Giriniz" disabled>
                    <div class="invalid-feedback">Fax Numarası Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="WebUrl" class="col-md-2 col-form-label">Web Url</label>
                <div class="col-md-6">
                    <input id="CompanyFirmaWebUrlSave" asp-for="WebUrl" type="text" class="form-control" placeholder="Web Adresi Giriniz" disabled>

                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="TaxAdministration" class="col-md-2 col-form-label">Vergi Dairesi</label>
                <div class="col-md-6">
                    <input id="CompanyFirmaTaxAdministrationDetails" asp-for="TaxAdministration" type="text" class="form-control" placeholder="Vergi Dairesi Giriniz" disabled>
                    <div class="invalid-feedback">Vergi Dairesi Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="TaxNumber" class="col-md-2 col-form-label">Vergi Numarası</label>
                <div class="col-md-6">
                    <input id="CompanyFirmaTaxNumberDetails" asp-for="TaxNumber" type="text" class="form-control" placeholder="Vergi Numarası Giriniz" disabled>
                    <div class="invalid-feedback">Vergi Numarası Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="EPosta" class="col-md-2 col-form-label">E-Posta</label>
                <div class="col-md-6">
                    <input id="CompanyFirmaEPostaDetails" asp-for="EPosta" type="text" class="form-control" placeholder="E-Posta Giriniz" disabled>
                    <div class="invalid-feedback">E-Posta Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="InvoiceAdress" class="col-md-2 col-form-label">Fatura Adresi</label>
                <div class="col-md-6">
                    <input id="CompanyInvoiceAdressDetails" asp-for="InvoiceAdress" type="text" class="form-control" placeholder="Fatura Adresi Giriniz" disabled>
                    <div class="invalid-feedback">Fatura Adresi Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="EInvoice" class="col-md-2 col-form-label">E-Fatura</label>
                <div class="col-md-6">
                    <input id="CompanyEInvoiceDetails" asp-for="EInvoice" type="text" class="form-control" placeholder="E-Fatura Giriniz" disabled>
                    <div class="invalid-feedback">E-Fatura Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="CompanyType" class="col-md-2 col-form-label">Firma Tipi</label>
                <div class="col-md-6">
                    <input id="CompanyCompanyTypeDetails" asp-for="CompanyType" type="text" class="form-control" placeholder="Firma Tipi Giriniz" disabled>
                    <div class="invalid-feedback">Firma Tipi Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Explanation" class="col-md-2 col-form-label" disabled >Açıklama</label>
                <div class="col-md-6">
                    <textarea id="elm1" asp-for="Explanation" class="form-control" ></textarea>

                </div>
            </div>





        </div>
    </div>
</div>

