@{
    ViewData["Title"] = "Save";
}
@model CompanyFirmaDto




<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="CompanyFirma" asp-action="Save" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Firma Kayıt</h4>
                <br>

                    <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label">Firma Name </label>
                    <div class="col-md-6">
                            <input id="CompanyFirmaNameSave" asp-for="Name" type="text" class="form-control" placeholder="Firma Giriniz" required>
                            <div class="invalid-feedback">Firma Adı Boş olamaz!</div>
                    </div>
                    </div>

                    <div class="mb-3 row">
                        <label asp-for="Adress" class="col-md-2 col-form-label">Firma Adresi</label>
                        <div class="col-md-6">
                            <input id="CompanyFirmaAdressSave" asp-for="Adress" type="text" class="form-control" placeholder="Firma Adresi Giriniz" required>
                            <div class="invalid-feedback">Firma Adresi Boş olamaz!</div>
                        </div>
                    </div>

                    <div class="mb-3 row">
                    <label asp-for="PhoneNumber" class="col-md-2 col-form-label">Telefon Numarası</label>
                        <div class="col-md-6">
                        <input id="CompanyFirmaPhoneNumberSave" asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefon Numarası Giriniz" required>
                            <div class="invalid-feedback">Telefon Numarası Boş olamaz!</div>
                        </div>
                    </div>

                <div class="mb-3 row">
                    <label asp-for="FaxNumber" class="col-md-2 col-form-label">Fax Numarası</label>
                    <div class="col-md-6">
                        <input id="CompanyFirmaFaxNumberSave" asp-for="FaxNumber" type="text" class="form-control" placeholder="Fax Numarası Giriniz" onkeypress="return isNumberKey(event)"  required>
                        <div class="invalid-feedback">Fax Numarası Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="WebUrl" class="col-md-2 col-form-label">Web Url</label>
                    <div class="col-md-6">
                        <input id="CompanyFirmaWebUrlSave" asp-for="WebUrl" type="text" class="form-control" placeholder="Web Adresi Giriniz" required>

                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="TaxAdministration" class="col-md-2 col-form-label">Vergi Dairesi</label>
                    <div class="col-md-6">
                        <input id="CompanyFirmaTaxAdministrationSave" asp-for="TaxAdministration" type="text" class="form-control" placeholder="Vergi Dairesi Giriniz" required>
                        <div class="invalid-feedback">Vergi Dairesi Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="TaxNumber" class="col-md-2 col-form-label">Vergi Numarası</label>
                    <div class="col-md-6">
                        <input id="CompanyFirmaTaxNumberSave" asp-for="TaxNumber" type="text" class="form-control" placeholder="Vergi Numarası Giriniz" onkeypress="return isNumberKey(event)" required>
                        <div class="invalid-feedback">Vergi Numarası Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="EPosta" class="col-md-2 col-form-label">E-Posta</label>
                    <div class="col-md-6">
                        <input id="CompanyFirmaEPostaSave" asp-for="EPosta" type="text" class="form-control" placeholder="E-Posta Giriniz" required>
                        <div class="invalid-feedback">E-Posta Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="InvoiceAdress" class="col-md-2 col-form-label">Fatura Adresi</label>
                    <div class="col-md-6">
                        <input id="CompanyInvoiceAdressSave" asp-for="InvoiceAdress" type="text" class="form-control" placeholder="Fatura Adresi Giriniz" required>
                        <div class="invalid-feedback">Fatura Adresi Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="EInvoice" class="col-md-2 col-form-label">E-Fatura</label>
                    <div class="col-md-6">
                        <input id="CompanyEInvoiceSave" asp-for="EInvoice" type="text" class="form-control" placeholder="E-Fatura Giriniz" required>
                        <div class="invalid-feedback">E-Fatura Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="CompanyType" class="col-md-2 col-form-label">Firma Tipi</label>
                    <div class="col-md-6">
                        <input id="CompanyCompanyTypeSave" asp-for="CompanyType" type="text" class="form-control" placeholder="Firma Tipi Giriniz" required>
                        <div class="invalid-feedback">Firma Tipi Boş olamaz!</div>
                    </div>
                </div>

              

                    <div class="mb-3 row">
                        <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                        <div class="col-md-6">
                            <textarea id="elm1" asp-for="Explanation" class="form-control"></textarea>

                        </div>
                    </div>


                <input type="submit"  class="btn btn-primary waves-effect waves-light me-1 form-group" />



            </form>


        </div>
    </div>
</div>
              

<script>
    function isNumberKey(evt) {
        var charCode = (evt.which) ? evt.which : event.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57))
            return false;
        return true;
    }

</script>


