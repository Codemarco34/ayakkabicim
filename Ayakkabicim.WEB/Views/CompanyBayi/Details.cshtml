@{
    ViewData["Title"] = "Details";
}
@model CompanyBayiDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
           
                <h4 class="card-title">Bayi Details</h4>
            <input type="hidden" asp-for="Id" id="CompanyBayiNameDetails">

            <div class="mb-3 row">
                    <label class="col-md-2 col-form-labe" asp-for="FirmaId">Kayıtlı Firmalar</label>
                    <div class="col-md-6">
                        <select class="form-control select2" asp-for="FirmaId" asp-items="ViewBag.firma" id="CompanyFirmaIdDetails" disabled></select>
                        <span asp-validation-for="FirmaId" class="text-danger"></span>
                    </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Name" class="col-md-2 col-form-label">Bayi Name </label>
                <div class="col-md-6">
                    <input id="CompanyBayiNameDetails" asp-for="Name" type="text" class="form-control" placeholder="Bayi Giriniz" disabled>
                    <div class="invalid-feedback">Bayi Adı Boş olamaz!</div>
                </div>
            </div>


            <div class="mb-3 row">
                        <label asp-for="Adress" class="col-md-2 col-form-label">Bayi Adresi</label>
                        <div class="col-md-6">
                            <input id="CompanyBayiAdressDetails" asp-for="Adress" type="text" class="form-control" placeholder="Bayi Adresi Giriniz" disabled>
                            <div class="invalid-feedback">Bayi Adresi Boş olamaz!</div>
                        </div>
                  
            </div>

            <div class="mb-3 row">
                <label asp-for="PhoneNumber" class="col-md-2 col-form-label">Telefon Numarası</label>
                <div class="col-md-6">
                    <input id="CompanyBayiPhoneNumberDetails" asp-for="PhoneNumber" type="text" class="form-control" placeholder="Telefon Numarası Giriniz" disabled>
                    <div class="invalid-feedback">Telefon Numarası Boş olamaz!</div>
                </div>

            </div>
          

            <div class="mb-3 row">
                <label asp-for="FaxNumber" class="col-md-2 col-form-label">Fax Numarası</label>
                <div class="col-md-6">
                    <input id="CompanyBayiFaxNumberDetails" asp-for="FaxNumber" type="text" class="form-control" placeholder="Fax Numarası Giriniz" disabled>
                    <div class="invalid-feedback">Fax Numarası Boş olamaz!</div>
                </div>
            </div>
            <div class="mb-3 row">
                <label asp-for="WebUrl" class="col-md-2 col-form-label">Web Url</label>
                <div class="col-md-6">
                    <input id="CompanyBayiWebUrlDetails" asp-for="WebUrl" type="text" class="form-control" placeholder="Web Adresi Giriniz" disabled>

                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="TaxAdministration" class="col-md-2 col-form-label">Vergi Dairesi</label>
                <div class="col-md-6">
                    <input id="CompanyBayiTaxAdministrationDetails" asp-for="TaxAdministration" type="text" class="form-control" placeholder="Vergi Dairesi Giriniz" disabled>
                    <div class="invalid-feedback">Vergi Dairesi Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="TaxNumber" class="col-md-2 col-form-label">Vergi Numarası</label>
                <div class="col-md-6">
                    <input id="CompanyBayiTaxNumberDetails" asp-for="TaxNumber" type="text" class="form-control" placeholder="Vergi Numarası Giriniz" disabled>
                    <div class="invalid-feedback">Vergi Numarası Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="EPosta" class="col-md-2 col-form-label">E-Posta</label>
                <div class="col-md-6">
                    <input id="CompanyBayiEPostaDetails" asp-for="EPosta" type="text" class="form-control" placeholder="E-Posta Giriniz" disabled>
                    <div class="invalid-feedback">E-Posta Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="InvoiceAdress" class="col-md-2 col-form-label">Fatura Adresi</label>
                <div class="col-md-6">
                    <input id="CompanyInvoiceAdressDetails" asp-for="InvoiceAdress" type="text" class="form-control" placeholder="Fatura Adresi Giriniz" disabled>
                    <div class="invalid-feedback">Fatura Adresi Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="EInvoice" class="col-md-2 col-form-label">E-Fatura</label>
                <div class="col-md-6">
                    <input id="CompanyEInvoiceDetails" asp-for="EInvoice" type="text" class="form-control" placeholder="E-Fatura Giriniz" disabled>
                    <div class="invalid-feedback">E-Fatura Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="CompanyType" class="col-md-2 col-form-label">Bayi Tipi</label>
                <div class="col-md-6">
                    <input id="CompanyCompanyTypeDetails" asp-for="CompanyType" type="text" class="form-control" placeholder="Bayi Tipi Giriniz" disabled>
                    <div class="invalid-feedback">Bayi Tipi Boş olamaz!</div>
                </div>
            </div>


            <div class="mb-3 row">
                <label asp-for="Explanation" class="col-md-2 col-form-label" >Açıklama</label>
                <div class="col-md-6">
                    <textarea id="elm1" asp-for="Explanation" class="form-control" disabled></textarea>

                </div>
            </div>





        </div>
    </div>
</div>

