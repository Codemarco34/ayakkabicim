@{
    ViewData["Title"] = "Update";
}
@model ProductCurrencyUnitsDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="ProductCurrencyUnits" asp-action="Update" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Para Birimi Güncelle</h4>
                <input type="hidden" asp-for="Id" id="ProductCurrencyUnitsIdUpdate">

                <div class="mb-3">
                    <label class="form-label" asp-for="CurrencyId">Kayıtlı Birimler</label>
                    <select class="form-control select2" asp-for="CurrencyId" asp-items="ViewBag.currency" id="ProductCurrencyUnitsIdUpdate"></select>
                    <span asp-validation-for="CurrencyId" class="text-danger"></span>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label" for="ProductsNameSave">Para Birimi</label>
                    <div class="col-md-6">
                        <input id="ProductCurrencyUnitsNameUpdate" asp-for="Name" type="text" class="form-control" placeholder="Para Birimini Yazınız" required>
                        <div class="invalid-feedback">Para Birimiı Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="ShortCode" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                        <input id="ProductCurrencyUnitsCodeUpdate" asp-for="ShortCode" type="text" class="form-control" placeholder="Para Birim Yazınız" required>
                        <div class="invalid-feedback">Para Birim Kodu Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-6">
                        <textarea id="elm1" asp-for="Explanation" class="form-control"></textarea>

                    </div>
                </div>
                

                <input type="submit" value="Update" class="btn btn-primary waves-effect waves-light me-1 form-group" />

            </form>


        </div>
    </div>
</div>

