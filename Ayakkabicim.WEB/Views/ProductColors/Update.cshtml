@{
    ViewData["Title"] = "Update";
}
@model ProductColorsDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="ProductColors" asp-action="Update" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Ürün Güncelle</h4>
                <input type="hidden" asp-for="Id" id="ProductColorsIdUpdate">

                <div class="mb-3">
                        <label class="form-label" asp-for="ProductColorId">Kayıtlı Renkler</label>
                        <select class="form-control select2" asp-for="ProductColorId" asp-items="ViewBag.colors" id="ProductColorsIdUpdate"></select>
                        <span asp-validation-for="ProductColorId" class="text-danger"></span>
                        </div

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label" for="ProductsNameSave">Adı</label>
                    <div class="col-md-6">
                        <input id="ProductsNameUpdate" asp-for="Name" type="text" class="form-control" placeholder="Renk Adını Yazınız" >
                        <div class="invalid-feedback">Renk Adı Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Code" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                        <input id="ProductsCodeUpdate" asp-for="Code" type="text" class="form-control" placeholder="Renk Kodunu Yazınız" >
                        <div class="invalid-feedback">Renk Kodu Boş olamaz!</div>
                    </div>
                </div>
                <div class="mb-3 row">
                    <label asp-for="IsActive" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                        <input id="ProductsCodeUpdate" asp-for="Code" type="number" class="form-control" placeholder="IsActive Kodunu Yazınız">
                        <div class="invalid-feedback">IsActive Kodu Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-6">
                        <textarea id="elm1" asp-for="Explanation" class="form-control"></textarea>

                    </div>
                </div>


                <input type="submit" value="Update" class="btn btn-primary waves-effect waves-light me-1 form-group" />

            </form>


        </div>
    </div>
</div>

