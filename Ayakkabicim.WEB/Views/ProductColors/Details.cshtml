@{
    ViewData["Title"] = "Details";
}
@model ProductColorsDto

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
           
                <h4 class="card-title">Renk Details</h4>
                <input type="hidden" asp-for="Id" id="ProductsIdUpdate">

            <div class="mb-3 row">
                <label asp-for="Name" class="col-md-2 col-form-label" for="ProductsNameSave">Renk Adı</label>
                <div class="col-md-6">
                    <input id="ProductColorsNameDetails" asp-for="Name" type="text" class="form-control" placeholder="Renk Adını Yazınız" disabled>
                    <div class="invalid-feedback">Renk Adı Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Code" class="col-md-2 col-form-label">Renk Kodu</label>
                <div class="col-md-6">
                    <input id="ProductColorsCodeDetails" asp-for="Code" type="text" class="form-control" placeholder="Renk Kodunu Yazınız" disabled>
                    <div class="invalid-feedback">Renk Kodu Boş olamaz!</div>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="Code" class="col-md-2 col-form-label">IsActive Kodu</label>
                <div class="col-md-6">
                    <input id="ProductColorsCodeDetails" asp-for="Code" type="text" class="form-control" placeholder="IsActive Kodunu Yazınız" disabled>
                    <div class="invalid-feedback">IsActive Kodu Boş olamaz!</div>
                </div>
            </div>
            

            <div class="mb-3 row">
                <label asp-for="Explanation" class="col-md-2 col-form-label" disabled >Açıklama</label>
                <div class="col-md-6">
                    <textarea id="elm1" asp-for="Explanation" class="form-control"></textarea>

                </div>
            </div>


        </div>
    </div>
</div>

