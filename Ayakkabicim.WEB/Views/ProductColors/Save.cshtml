@{
    ViewData["Title"] = "Save";
}
@model ProductColorsDto




<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <form asp-controller="ProductColors" asp-action="Save" method="post" class="needs-validation" novalidate>
                <h4 class="card-title">Renk Kayıt</h4>
                    <div class="col-lg-6">
                        <div class="mb-3">
                        <label class="form-label" asp-for="ProductColorId">Kayıtlı Renkler</label>
                        <select class="form-control select2" asp-for="ProductColorId" asp-items="ViewBag.colors" id="ProductColorsIdSave"></select>
                        <span asp-validation-for="ProductColorId" class="text-danger"></span>
                        </div>
                        

                <div class="mb-3 row">
                    <label asp-for="Name" class="col-md-2 col-form-label" for="ProductsNameSave">Renk Adı</label>
                    <div class="col-md-6">
                        <input asp-for="Name" type="text" class="form-control" id="ProductsColorsName" placeholder="Renk Adını Yazınız" required>
                        <div class="invalid-feedback">Renk Adı Boş olamaz!</div>
                    </div>
                </div>

                <div class="mb-3 row">
                    <label asp-for="Code" class="col-md-2 col-form-label">Kodu</label>
                    <div class="col-md-6">
                        <input asp-for="Code" id="ProductsColorsCode" class="form-control" type="text" placeholder="Renk Kodunu Yazınız" required>
                        <div class="invalid-feedback">Renk Kodu Boş olamaz!</div>
                    </div>
                </div>
                

                <div class="mb-3 row">
                    <label asp-for="Explanation" class="col-md-2 col-form-label">Açıklama</label>
                    <div class="col-md-6">
                        <textarea id="elm1" asp-for="Explanation" class="form-control"></textarea>

                    </div>
                </div>

               

                <input type="submit"  class="btn btn-primary waves-effect waves-light me-1 form-group" />



                </div>
            </form>


        </div>
    </div>
</div>
              




